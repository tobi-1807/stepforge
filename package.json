    "@types/node": "^20.10.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/ws": "^8.5.10",
    "@vitejs/plugin-react": "^4.2.1",
    "@xyflow/react": "^12.0.0-next.16",
    "autoprefixer": "^10.4.16",
    "clsx": "^2.1.0",
    "elkjs": "^0.9.3",
    "lucide-react": "^0.300.0",
