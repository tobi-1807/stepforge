  "type": "module",
  "main": "dist/sdk/index.js",
  "module": "dist/sdk/index.js",
  "types": "dist/sdk/index.d.ts",
  "bin": {
    "stepforge": "dist/daemon/server.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "mprocs",
